<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv_login_container"
    android:layout_margin="@dimen/default_margin_dimen"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etForUserName"
            android:hint="Enter User name"
            android:layout_marginBottom="@dimen/margin_normal"
            android:inputType="textPersonName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etForPwd"
            android:layout_marginBottom="@dimen/margin_normal"
            android:hint="Enter Password"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btnForSignin"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Sign in"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvForSignUp"
        android:layout_below="@id/cv_login_container"
android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_normal"
        android:text="@string/text_signup_info"/>
</RelativeLayout>