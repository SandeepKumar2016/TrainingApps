<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:padding="@dimen/margin_normal"
    tools:showIn="@layout/activity_sign_up">

    <EditText
        android:id="@+id/etForUserNameAtsignup"

        style="@style/MyStyleForEditText"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:hint="@string/texthint_username"/>

    <EditText
        android:id="@+id/etForPwdatSignup"
        style="@style/MyStyleForEditText"
        android:inputType="textPassword"
        android:hint="@string/texthint_password"/>

    <EditText
        android:id="@+id/etForReEnterPwdatSignup"
        style="@style/MyStyleForEditText"

        android:inputType="textPassword"
        android:hint="Re Enter Password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select Gender"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/rGroupForGenderAtSignup"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rBtnForMaleGender"
            android:layout_marginRight="@dimen/margin_normal"
            android:checked="true"
            android:textSize="@dimen/textsize_normal"
            android:text="male"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rBtnForFeMaleGender"
            android:textSize="@dimen/textsize_normal"
            android:text="female"/>

    </RadioGroup>

    <TextView
        style="@style/MyStyleForEditText"

        android:hint="Please Enter DOB"
        android:padding="@dimen/margin_normal"
        android:id="@+id/tvForDobAtSignup"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnForSignUp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Sign Up"/>




</LinearLayout>