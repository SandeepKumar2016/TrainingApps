<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />


    <Button
        android:id="@+id/btnForBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Send Broadcast"
        android:onClick="onButtonClicked"
        />

    <Button
        android:id="@+id/btnForRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnForBroadcast"
        android:layout_marginTop="18dp"
        android:text="Register"
        android:onClick="onRegClicked"

        android:layout_centerHorizontal="true"
       />
    <Button
        android:id="@+id/btnForUnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnForRegister"
android:layout_centerHorizontal="true"
        android:onClick="onUnregClicked"
        android:layout_marginTop="18dp"
        android:text="Unregister"
       />



</RelativeLayout>