<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_Layout">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/containerForIndividualList"
    android:background="@color/colorAccent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageOfList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher_background"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameOfPerson"
        android:text="Eindhoven"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/imageOfList"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressOfPeroson"
        android:text="Netherlands"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/imageOfList"
        android:layout_below="@+id/nameOfPerson"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>


</RelativeLayout>
